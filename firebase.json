{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist/PDP",
    "ignore": [
      "firebase.json",
      ".firebaserc",
      ".ides",
      ".git",
      ".gitignore",
      ".editorconfig",
      "src/**/.*",
      "database.rules.json",
      "angular.json",
      "package.json",
      "package-lock.json",
      "README.md",
      "tsconfig.json",
      "tslint.json",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  }
}
